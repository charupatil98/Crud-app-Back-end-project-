<body>
  <div class="container-fluid">
  <%- include('../partials/nav') %>
 <center><h3 class="mt-5">Empolye Data</h3></i></center><hr>

 <% if(users!='')
 {
  %>
  <div class="container">
  <table class="table table table-success table-striped mt-5 mb-10 ">
    <thead>
      <tr>
        <th scope="col">id</th>
        <th scope="col">Name</th>
        <th scope="col">Email</th>
        <th scope="col">Phone</th>
        <th scope="col">Image</th>
        <th scope="col">Delete</th>
        <th scope="col">Update</th>
      </tr>
    </thead>
    <tbody>
      <% users.forEach((row,index)=>
      {%>

      <tr>
        <td><%=index%></td>
        <td><%=row.name%></td>
        <td><%=row.email%></td>
        <td><%=row.phone%></td>
        <td><img src="<%=row.image%>" width="50px" height="60px"></td>
        <td><a href="/delete/<%=row.id%>" class="btn btn-danger">delete</button></a>
          <td><a href="/edit/<%=row.id%>" class="btn btn-primary">Edit</button></a>
      
      </tr>
      <% }) %>
      
    </tbody> 
  </table>
  
  
  <%} else {%>
    <h1>no user found</h1>
    
    <%}%>
    </div>
  
  
 
 
  <%- include('../partials/footer') %>
  </div>
</body>
</html>
